    <div class="preview-image bg-navy text-center">
        <!-- <img src="/stylesheets/assets/images/details-image.png" class="img-content" alt="semina"> -->
    </div>

    <div class="details-content container">
        <div class="d-flex flex-wrap justify-content-lg-center gap">

            <!-- Card Event -->
            <div class=" flex-column card-event text-center">
                <!-- Speaker Information -->
                <h6>Event <%=peserta.event%></h6>
                <img src="/images/<%=peserta.no_peserta%>.png" alt=" Red dot" width="150px" />

                <div class="align-items-center  mt-3">
                    <div>
                        <div class="speaker-name">
                            <%=peserta.nama%> </div>
                        <div class="speaker-name-child">
                            <%=peserta.email%> </div>
                        <div class="speaker-name-child">
                            <%=peserta.no_whatsapp%> </div>
                        <div class="speaker-name-child">
                            <% if(peserta.flag_internal) { %>
                            <%=peserta.nip%>
                            <% } else {%>
                            <%=peserta.umur%>
                            <% } %>
                        </div>
                        <div class="speaker-name-child">
                            <% if(peserta.flag_internal) { %>
                            <%= peserta.departement%>
                            <% } else {%>
                            <%= peserta.alamat%>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="price my-3"><%=peserta.no_peserta%></div>
                <hr>
                <a href="/images/<%=peserta.no_peserta%>.png" download="<%=peserta.no_peserta%>.png"
                    class="btn-green">Download QRCode</a>
            </div>
        </div>
    </div>



