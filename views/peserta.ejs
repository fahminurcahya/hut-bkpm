        summary::-webkit-details-marker {
            color: blue;
        }

        summary:focus {
            outline-style: none;
        }
    </style>
</head>

<body>

    <!-- START: NAVBAR -->
    <section class="bg-navy">
        <nav class="container navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/stylesheets/assets/images/logo.svg" alt="img" height="75" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav mx-auto my-3 my-lg-0">
                    </div>
                    <div class="d-grid">
                        <a class="btn-navy" href="/signout">
                            Keluar
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <!-- END: NAVBAR -->

    <div class="preview-image bg-navy text-center">
        <!-- <img src="/stylesheets/assets/images/details-image.png" class="img-content" alt="semina"> -->
    </div>

    <div class="details-content container" style="text-align: center;">

        <div class="d-flex flex-wrap justify-content-lg-center gap">

            <!-- Card Event -->
            <div class=" flex-column card-event text-center">
                <!-- Speaker Information -->
                <% if(peserta.event == "fr") { %>
                <h6 class="price my-3">FUN RUN</h6>
                <br>
                <img src="/images/fr/<%=peserta.no_peserta%>.png" alt=" Red dot" width="150px" />
                <% }else { %>
                <h6 class="price my-3">FUN WALK</h6>
                <br>
                <img src="/images/fw/<%=peserta.no_peserta%>.png" alt=" Red dot" width="150px" />
                <% } %>

                <div class="price my-3">Nomor Peserta</div>
                <div class="price my-3"><%=peserta.no_peserta%>
                </div>
                <hr>
                <% if(peserta.event == "fr") { %>
                <a href="/pdf/fr/<%=peserta.no_peserta%>.pdf" download="<%=peserta.no_peserta%>.pdf"
                    class="btn-green">Download Tiket</a>
                <% }else { %>
                <a href="/pdf/fw/<%=peserta.no_peserta%>.pdf" download="<%=peserta.no_peserta%>.pdf"
                    class="btn-green">Download Tiket</a>
                <% } %>

                <hr>
                <details>
                    <summary>Lihat Detail</summary>
                    <% if(peserta.flag_internal) { %>
                    <div id="vis_nip">
                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_nip" class="form-label">
                                Nip
                            </label>
                            <input readonly value="<%=peserta.nip%>" type="text" class="form-control" id="nip"
                                name="nip" placeholder="Masukkan Nip">
                        </div>
                    </div>
                    <% }%>
                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_nik" class="form-label">
                            NIK/KTP
                        </label>
                        <input readonly value="<%=peserta.nik%>" type="text" class="form-control" id="nik" name="nik"
                            placeholder="Masukkan NIK/KTP" required>
                    </div>
                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_alamat" class="form-label">
                            Alamat
                        </label>
                        <textarea readonly class="form-control" id="alamat" name="alamat" rows="3"
                            required><%= peserta.alamat %></textarea>
                    </div>
                    <% if(peserta.flag_internal) { %>

                    <div id="vis_departemen">
                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_departement" class="form-label">
                                Kedeputian
                            </label>
                            <input readonly value="<%=peserta.departement%>" type="text" class="form-control" required>
                        </div>
                    </div>
                    <% }%>

                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_email" class="form-label">
                            Email
                        </label>
                        <input readonly value="<%=peserta.email%>" type="email" class="form-control" id="email"
                            name="email" placeholder="contoh@gmail.com" required>
                    </div>
                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_no_whatsapp" class="form-label">
                            No HP
                        </label>
                        <input readonly value="<%=peserta.no_whatsapp%>" type="text" class="form-control"
                            id="no_whatsapp" name="no_whatsapp" placeholder="Masukkan No HP" required>
                    </div>
                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_jenkel" class="form-label">
                            Jenis Kelamin
                        </label>
                        <% if(peserta.jenkel == "L") { %>
                        <input readonly value="Laki-Laki" type="text" class="form-control">
                        <% } else { %>
                        <input readonly value="Perempuan" type="text" class="form-control">
                        <% } %>
                    </div>
                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_golongan_darah" class="form-label">
                            Golongan Darah
                        </label>

                        <input readonly value="<%=peserta.golongan_darah%>" type="text" class="form-control" required>

                    </div>
                    <div class="d-flex flex-column align-items-start mt-4">
                        <label id="lbl_ukuran" class="form-label">
                            Ukuran Jersey
                        </label>
                        <input readonly value="<%=peserta.ukuran%>" type="text" class="form-control" required>

                    </div>

                    <div class="field">
                        <span id="message"></span>
                    </div>
                    <div id="addinfo">
                        <label id="lbl_darurat" class="form-label mt-4">
                            *Dalam Keadaan Darurat Pihak Yang Dapat Dihubungi ( Yang Tidak Serumah )
                        </label>

                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_nama_darurat" class="form-label">
                                Nama Lengkap </label>
                            <input readonly value="<%=peserta.nama_darurat%>" type="text" class="form-control"
                                id="nama_darurat" name="nama_darurat" placeholder="Masukan Nama Lengkap" required>
                        </div>
                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_hubungan" class="form-label">
                                Hubungan </label>
                            <input readonly value="<%=peserta.hubungan%>" type="text" class="form-control" id="hubungan"
                                name="hubungan" placeholder="Masukan Hubungan" required>
                        </div>
                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_no_hp_darurat" class="form-label">
                                Nomor HP </label>
                            <input readonly value="<%=peserta.no_darurat%>" type="text" class="form-control"
                                id="no_hp_darurat" name="no_hp_darurat" placeholder="Masukan Nama Lengkap" required>
                        </div>

                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_alamat_darurat" class="form-label">
                                Alamat
                            </label>
                            <textarea class="form-control" id="alamat_darurat" name="alamat_darurat" rows="3"
                                readonly><%= peserta.alamat_darurat%></textarea>
                        </div>
                    </div>
                    <!-- Pendamping -->
                    <% if(peserta.event == "fw" && peserta.flag_internal)   { %>
                    <% for(let i = 0; i < pendamping.length; i++){ %>
                    <div class="row mt-4">
                        <label id="lbl_pendamping_1" class="form-label">
                            Pendamping <%= i + 1 %>
                        </label>
                        <div class="d-flex flex-column align-items-start mt-4">
                            <label id="lbl_nama_pendamping_1" class="form-label">
                                Nama Pendamping
                            </label>
                            <input readonly value="<%=pendamping[i].nama%>" type="text" class="form-control" />
                            <label id="lbl_nama_pendamping_1" class="form-label">
                                Ukuran
                            </label>
                            <input readonly value="<%=pendamping[i].ukuran%>" type="text" class="form-control" />
                        </div>
                    </div>
                    <% } %>
                    <%}%>                </details>
                
               
<!-- Pendamping -->
            </div>
        </div>
    </div>



